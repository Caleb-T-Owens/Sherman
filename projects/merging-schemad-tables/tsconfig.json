{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2021"],
		"moduleResolution": "nodenext",
		"module": "NodeNext",
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"experimentalDecorators": true,
		"declaration": true,
		"composite": true,
		"declarationMap": true,
		"noUncheckedIndexedAccess": true,
		"outDir": "./dist",
		"rootDir": "src",
	},
	"include": ["src/**/*.ts"]
}
