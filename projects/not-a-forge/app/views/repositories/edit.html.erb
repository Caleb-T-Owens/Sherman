<article>
  <h1>Edit Repository</h1>

  <%= form_with model: @repository, url: repository_path(@repository), method: :patch do |form| %>
    <% if @repository.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@repository.errors.count, "error") %> prohibited this repository from being saved:</h2>
        <ul>
          <% @repository.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :owner, "Repository Owner" %>
      <%= form.text_field :owner, required: true %>
    </div>

    <div>
      <%= form.label :name, "Repository Name" %>
      <%= form.text_field :name, required: true %>
    </div>

    <div>
      <%= form.label :token_id, "Access Token (optional)" %>
      <%= form.collection_select :token_id, @tokens, :id, :name, { include_blank: "None (public repositories only)" } %>
      <small>Select a token if this is a private repository</small>
    </div>

    <div>
      <%= form.submit "Update Repository" %>
      <%= link_to "Cancel", repositories_path %>
    </div>
  <% end %>
</article>
