<h1>Login</h1>

<%= form_with(url: login_path, method: :post) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>

<p>Don't have an account? <%= link_to "Sign up", signup_path %></p> 
