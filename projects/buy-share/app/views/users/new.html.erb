<div class="pure-g">
  <div class="pure-u-1">
    <section class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3" style="margin: 0 auto; padding: 2em">
      <h1>Sign Up</h1>

      <%= form_with(model: @user, url: signup_path, class: "pure-form pure-form-stacked") do |form| %>
        <% if @user.errors.any? %>
          <div class="pure-alert pure-alert-error">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
            <ul>
              <% @user.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <fieldset>
          <div class="pure-control-group">
            <%= form.label :name %>
            <%= form.text_field :name, required: true, class: "pure-input-1" %>
          </div>

          <div class="pure-control-group">
            <%= form.label :email %>
            <%= form.email_field :email, required: true, class: "pure-input-1" %>
          </div>

          <div class="pure-control-group">
            <%= form.label :password %>
            <%= form.password_field :password, required: true, class: "pure-input-1" %>
          </div>

          <div class="pure-control-group">
            <%= form.label :password_confirmation %>
            <%= form.password_field :password_confirmation, required: true, class: "pure-input-1" %>
          </div>

          <div class="pure-controls">
            <%= form.submit "Sign Up", class: "pure-button pure-button-primary" %>
          </div>
        </fieldset>
      <% end %>

      <p>Already have an account? <%= link_to "Login", login_path %></p>
    </section>
  </div>
</div>
