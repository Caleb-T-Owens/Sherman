<div class="pure-g">
  <div class="pure-u-1">
    <section class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3" style="margin: 0 auto; text-align: center; padding: 2em;">
      <h1>Welcome to Buy Share</h1>
      <p>A simple way to share expenses with friends, family, or roommates.</p>
      
      <% if user_signed_in? %>
        <div style="margin-top: 2em;">
          <%= link_to "View My Funds", funds_path, class: "pure-button pure-button-primary" %>
          <%= link_to "Create New Fund", new_fund_path, class: "pure-button" %>
        </div>
      <% else %>
        <div style="margin-top: 2em;">
          <p>Please sign in or create an account to get started.</p>
          <div>
            <%= link_to "Sign Up", signup_path, class: "pure-button pure-button-primary" %>
            <%= link_to "Login", login_path, class: "pure-button" %>
          </div>
        </div>
      <% end %>
    </section>
  </div>
</div>
