<main>
  <section>
    <h1>Dashboard</h1>
    <p>Welcome back, <%= Current.user.email_address %></p>
  </section>

  <section>
    <h2>Quick Actions</h2>
    <nav>
      <ul>
        <li><%= link_to "Sources", sources_path %></li>
      </ul>
    </nav>
  </section>

  <section>
    <h2>All Services</h2>
    <ul>
      <% ServiceLocation.all.each do |service_location| %>
        <% service_location.services.each do |service| %>
          <li>
            <h3><%= service.name %></h3>
            <p>Deployed on nodes:</p>
            <ul>
              <% service.nodes.each do |node| %>
                <li><%= node.name %></li>
              <% end %>
            </ul>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
</main> 
