<main>
  <section>
    <h1>Service Locations for <%= @source.name %></h1>

    <% if @service_locations.any? %>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Path</th>
            <th>Found</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @service_locations.each do |location| %>
            <tr>
              <td><%= location.name %></td>
              <td><%= location.path %></td>
              <td><%= location.exist? ? "Yes" : "No" %></td>
              <td><%= link_to "Show", source_service_location_path(@source, location) %></td>
              <td><%= link_to "Edit", edit_source_service_location_path(@source, location) %></td>
              <td>
                <%= button_to "Delete", 
                  source_service_location_path(@source, location), 
                  method: :delete, 
                  form: { data: { turbo_confirm: "Are you sure?" } } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No service locations defined for this source.</p>
    <% end %>

    <div>
      <%= link_to "New Service Location", new_source_service_location_path(@source) %> |
      <%= link_to "Back to Source", source_path(@source) %>
    </div>
  </section>
</main>
